<style>
.product-print-only-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
.print-only-main {
    display: grid;
    align-items: start;
    gap: 20px;
    grid-template-columns: 1fr 1fr;
}
.print-only-banner {
    background: #fff3cd;
    border: 2px solid #ffc107;
    padding: 20px;
    width: 100%;
    height: 100%;
    border-radius: 8px;
}
.print-only-banner h3 {
    color: #333;
    font-size: 24px;
    margin: 0 0 12px 0;
}
.print-only-banner p {
    color: #333;
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
}
.recommendation-text {
    background: #f0f8f0;
    border: 2px solid #7ac043;
    border-radius: 8px;
    padding: 20px;
    width: 100%;
    height: 100%;
}
.recommendation-text h3 {
    color: #333;
    font-size: 24px;
    margin: 0 0 12px 0;
}
.recommendation-text p {
    color: #333333;
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
}

@media (max-width: 749px) {
  .product-print-only-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
}

@media (max-width: 700px) {
  .print-only-banner p ,   .recommendation-text p {   font-size: 15px;}
  .recommendation-text h3 , .print-only-banner h3 {    font-size: 20px;}
  .print-only-main {grid-template-columns: 1fr;}
}
</style>

<div class="product-print-only-{{ section.id }} tab-content-new"  >
  <div class="page-width">
     <h2 class="solution-header">{{ section.settings.heading }}</h2>
    <div class="print-only-main">
      <div class="print-only-banner">
        {% if  product.metafields.custom.printer_only != blank%}
         {{ product.metafields.custom.printer_only | metafield_tag }}
        {% else %}
          {{ section.settings.text }}
        {% endif %}  
      </div>
      <div class="recommendation-text">
          {% if  product.metafields.custom.our_recommendation != blank%}
            {{ product.metafields.custom.our_recommendation | metafield_tag }}
          {% else %}
            {{ section.settings.text1 }}
          {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Printer only banner",
  "settings": [
    {
      "type":"text",
      "id":"heading",
      "label":"Hection heading"
    },
    {
      "type": "richtext",
      "id":"text",
      "label":"Printer Only",
      "default":"<p>Printer Only</p>"
    },
    {
      "type": "richtext",
      "id":"text1",
      "label":"Our Recommendation",
      "default":"<p>Our Recommendation</p>"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding mobile",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Printer only banner",
      "category": "product"
    }
  ]
}
{% endschema %}