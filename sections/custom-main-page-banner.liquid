{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .badge-grid-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    align-items: flex-start;
    max-width: {{ section.settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Left Side Content */
  .badge-content-col {
    flex: 1;
    min-width: 300px;
  }

  .badge-content-col h2 {
    font-size: 3.5rem;
    line-height: 1.1;
    margin: 0 0 20px 0;
    font-weight: 700;
    color: #333;
  }

  .badge-content-col p {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 30px;
    max-width: 280px;
    line-height: 1.4;
  }

  .badge-cta {
    display: inline-block;
    background-color: #f79421;
    color: #fff;
    padding: 12px 25px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .badge-cta:hover {
    background-color: #e68410;
  }

  /* Right Side Grid */
  .badge-visual-col {
    flex: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }

  .badge-main-feature {
    background: #f8f8f8;
    display: flex;
    flex-direction: column;
    border: 1px solid #e5e5e5;
  }

  .badge-sub-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }

  .badge-card {
    background: #f8f8f8;
    border: 1px solid #e5e5e5;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .badge-card:hover {
    transform: translateY(-2px);
  }

  .badge-image-container {
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .badge-image-container img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }

  .badge-title-bar {
    background: #fff;
    padding: 12px;
    text-align: left;
    font-size: 14px;
    border-top: 1px solid #e5e5e5;
  }

  /* Responsive Adjustments */
  @media (max-width: 990px) {
    .badge-visual-col {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 749px) {
    .badge-content-col {
      text-align: center;
    }
    .badge-content-col p {
      margin: 0 auto 30px;
    }
    .badge-content-col h2 {
      font-size: 2.5rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="badge-grid-wrapper">
    
    <div class="badge-content-col">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="badge-cta">
          {{ section.settings.button_label }} &rarr;
        </a>
      {%- endif -%}
    </div>

    <div class="badge-visual-col">
      
      {%- assign main_coll = section.settings.main_collection -%}
      <a href="{{ main_coll.url | default: '#' }}" class="badge-card badge-main-feature">
        <div class="badge-image-container">
          {%- if section.settings.main_image != blank -%}
            <img src="{{ section.settings.main_image | image_url: width: 600 }}" alt="{{ section.settings.main_title }}">
          {%- else -%}
             {{ 'product-1' | placeholder_svg_tag }}
          {%- endif -%}
        </div>
        <div class="badge-title-bar">{{ section.settings.main_title }}</div>
      </a>

      <div class="badge-sub-grid">
        {%- for block in section.blocks -%}
          <a href="{{ block.settings.collection.url | default: '#' }}" class="badge-card" {{ block.shopify_attributes }}>
            <div class="badge-image-container">
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_url: width: 300 }}" alt="{{ block.settings.title }}">
              {%- else -%}
                {{ 'product-2' | placeholder_svg_tag }}
              {%- endif -%}
            </div>
            <div class="badge-title-bar">{{ block.settings.title }}</div>
          </a>
        {%- endfor -%}
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "ID Accessory Grid",
  "settings": [
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Fast. Reliable. Human."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Family Owned and Operated in the USA since 2001"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Best Sellers"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Large Featured Item"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Featured Image"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Featured Title",
      "default": "Retractable Reels"
    },
    {
      "type": "collection",
      "id": "main_collection",
      "label": "Featured Collection"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "page_width",
      "min": 1000,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "Section Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "collection_item",
      "name": "Small Collection",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category Name"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ID Accessory Grid",
      "blocks": [
        { "type": "collection_item", "settings": { "title": "Badge Buddies" } },
        { "type": "collection_item", "settings": { "title": "Badge Holders" } },
        { "type": "collection_item", "settings": { "title": "Lanyards" } },
        { "type": "collection_item", "settings": { "title": "Custom Reels" } }
      ]
    }
  ]
}
{% endschema %}