{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .badge-grid-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    align-items: center;
    max-width: {{ section.settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .badge-content-col {
    flex: 1;
    min-width: 320px;
  }

  .badge-content-col h2 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin: 0 0 20px 0;
    font-weight: 700;
  }

  .badge-content-col p {
    font-size: 1.4rem; 
    font-weight: 600;
    margin-bottom: 30px;
    max-width: 350px;
    line-height: 1.3;
  }

  .badge-cta {
    display: inline-block;
    background-color: #f79421;
    color: #fff;
    padding: 14px 32px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }

  .badge-visual-col {
    flex: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }

  .badge-card {
    background: #f8f8f8; /* Reverted to Grey */
    border: 1px solid #e5e5e5;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
    overflow: hidden;
  }

  .badge-image-container {
    aspect-ratio: 1 / 1; 
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px;
    flex-grow: 1;
  }

  .badge-image-container img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .badge-title-bar {
    background: #fff;
    padding: 15px;
    text-align: left;
    font-size: 16px;
    font-weight: 500;
    border-top: 1px solid #e5e5e5;
  }

  .badge-sub-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }

  @media (max-width: 1100px) {
    .badge-visual-col { grid-template-columns: 1fr; }
  }

  @media (max-width: 749px) {
    .badge-content-col { text-align: center; flex: 1 1 100%; }
    .badge-content-col p { margin: 0 auto 30px; }
    .badge-visual-col { grid-template-columns: 1fr; }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="badge-grid-wrapper">
    
    <div class="badge-content-col">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="badge-cta">
          {{ section.settings.button_label }} &rarr;
        </a>
      {%- endif -%}
    </div>

    <div class="badge-visual-col">
      
      {%- assign main_collection = section.settings.main_collection -%}
      {%- assign main_img = section.settings.main_image_override | default: main_collection.featured_image -%}
      
      <a href="{{ main_collection.url | default: '#' }}" class="badge-card">
        <div class="badge-image-container">
          {%- if main_img != blank -%}
            <img src="{{ main_img | image_url: width: 800 }}" alt="{{ main_collection.title }}" loading="lazy">
          {%- else -%}
            {{ 'collection-1' | placeholder_svg_tag }}
          {%- endif -%}
        </div>
        <div class="badge-title-bar">
          {{ main_collection.title | default: "Select Main Collection" }}
        </div>
      </a>

      <div class="badge-sub-grid">
        {%- for block in section.blocks -%}
          {%- assign block_collection = block.settings.collection -%}
          {%- assign block_img = block.settings.image_override | default: block_collection.featured_image -%}
          
          <a href="{{ block_collection.url | default: '#' }}" class="badge-card" {{ block.shopify_attributes }}>
            <div class="badge-image-container">
              {%- if block_img != blank -%}
                <img src="{{ block_img | image_url: width: 400 }}" alt="{{ block_collection.title }}" loading="lazy">
              {%- else -%}
                {{ 'collection-' | append: forloop.index | placeholder_svg_tag }}
              {%- endif -%}
            </div>
            <div class="badge-title-bar">
              {{ block_collection.title | default: "Select Collection" }}
            </div>
          </a>
        {%- endfor -%}
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "ID Accessory Grid",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Fast. Reliable. Human."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Family Owned and Operated in the USA since 2001"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Best Sellers"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Main Featured Collection"
    },
    {
      "type": "collection",
      "id": "main_collection",
      "label": "Select Collection"
    },
    {
      "type": "image_picker",
      "id": "main_image_override",
      "label": "Image Override (Optional)",
      "info": "Leave blank to use Collection's featured image"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "page_width",
      "min": 1000,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "Section max-width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "image_picker",
          "id": "image_override",
          "label": "Image Override (Optional)",
          "info": "Leave blank to use Collection's featured image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ID Accessory Grid",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}