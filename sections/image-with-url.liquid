<style>
  .shipping-two-image-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
     max-width: 1250px;
    margin: 0 auto;
}
.shipping-image-heading {
    font-size: 30px;
    letter-spacing: 0;
    text-transform: capitalize;
    color: #3A3A3C;
    margin: 0;
    line-height: 100%;
}
  p.shipping-image-description {
    font-size: 18px;
    line-height: 30px;
    letter-spacing: 0;
    color: #696969;
}
.shipping-inner-two-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 40px;
    margin-top: 50px;
}
  .shipping-inner-two-1 img {
    width: 100%;
    height: auto;
    object-fit: contain;
}
  .shipping-blog-block h3 {
    font-size: 16px;
    line-height: normal;
    letter-spacing: 0;
    text-transform: capitalize;
    color: #3A3A3C;
    font-weight: 400 !important;
}
  @media(max-width:900px){
    .shipping-inner-two-1 {   grid-template-columns: 1fr 1fr;  gap: 20px;    margin-top: 30px;}

}
  @media screen and (max-width: 767px) {
   .shipping-two-image-{{ section.id }} {
      padding-top: {{ section.settings.mob_top_spacing | append: 'px' }};
      padding-bottom: {{ section.settings.mob_bottom_spacing | append: 'px' }};
    }
    .shipping-image-heading {    font-size: 25px;    line-height: 37px;}
    .shipping-inner-two-1 {   gap: 10px;    margin-top: 20px;}
  }
</style>

<div class="shipping-two-image-{{ section.id }}">
  <div class="page-width">
    <div class="section-heading-wrapper" style="text-align:{{ section.settings.alignment }};">
      <h2 class="shipping-image-heading">{{ section.settings.heading }}</h2>
      <p class="shipping-image-description">{{ section.settings.description }}</p>
    </div>
    <div class="shipping-inner-two-1">
      {% for block in section.blocks %}
        <div class="shipping-blog-block">
          <a href="{{ block.settings.blog_post_url }}">
            {{ block.settings.blog_image | image_url: width: 700 | image_tag: loading: 'lazy' }}
          </a>
          {% if block.settings.blog_title != blank %}
            <h3 class="blog-title">{{ block.settings.blog_title }}</h3>
          {% endif %}
        </div>
      {% endfor %}
    </div>

  </div>
</div>


{% schema %}
{
  "name": "Image With Url",
  "settings": [
    {
      "type":"inline_richtext",
      "id":"heading",
      "label":"heading"
    },
    {
      "type":"textarea",
      "id":"description",
      "label":"Content"
    },
    {
      "type":"text_alignment",
      "id":"alignment",
      "label":"Text Alignment"
    },
    {
      "type": "header",
      "content": "Padding section"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Desktop padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Desktop padding bottom",
      "default": 52
    },
    {
      "type": "range",
      "id": "mob_top_spacing",
      "label": "Mobile paddding top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "mob_bottom_spacing",
      "label": "Mobile paddding bottom" ,
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 40
    }
   ],
  "blocks": [
      {
        "type": "blog_block",
        "name": "Blog Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "blog_image",
            "label": "Blog Image"
          },
          {
            "type": "url",
            "id": "blog_post_url",
            "label": "Blog Post URL"
          },
          {
            "type": "text",
            "id": "blog_title",
            "label": "Blog Title"
          }
        ]
      }
    ],
   "presets": [
      {
        "name": "Image With Url"
      }
    ]
}
{% endschema %}