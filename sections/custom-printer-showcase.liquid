<section class="printx-section">
  <div class="printx-container">
    <h2 class="printx-title">{{ section.settings.title }}</h2>
    <div
      class="printx-bar"
      style="background: #F5911F; height: 4px; width: 100px; margin: 10px auto 40px; border-radius: 2px;"
    ></div>
    <div class="printx-grid">
      <div class="printx-info">
        <p class="printx-description">{{ section.settings.description }}</p>
        <div class="printx-features">
          <div class="printx-feature">
            {% if section.settings.feature1_symbol %}
              <div class="printx-symbol">{{ section.settings.feature1_symbol }}</div>
            {% endif %}
            <h4>{{ section.settings.feature1_title }}</h4>
            <p>{{ section.settings.feature1_text }}</p>
          </div>
          <div class="printx-feature">
            {% if section.settings.feature2_symbol %}
              <div class="printx-symbol">{{ section.settings.feature2_symbol }}</div>
            {% endif %}
            <h4>{{ section.settings.feature2_title }}</h4>
            <p>{{ section.settings.feature2_text }}</p>
          </div>
          <div class="printx-feature">
            {% if section.settings.feature3_symbol %}
              <div class="printx-symbol">{{ section.settings.feature3_symbol }}</div>
            {% endif %}
            <h4>{{ section.settings.feature3_title }}</h4>
            <p>{{ section.settings.feature3_text }}</p>
          </div>
          <div class="printx-feature">
            {% if section.settings.feature4_symbol %}
              <div class="printx-symbol">{{ section.settings.feature4_symbol }}</div>
            {% endif %}
            <h4>{{ section.settings.feature4_title }}</h4>
            <p>{{ section.settings.feature4_text }}</p>
          </div>
        </div>
      </div>
      <div class="printx-visual">
        {% if section.settings.visual_image != blank %}
          <img src="{{ section.settings.visual_image | img_url: '150x150' }}" alt="Technology Icon" class="printx-icon">
        {% endif %}
        <h3 class="printx-visual-heading">{{ section.settings.visual_title }}</h3>
        <p class="printx-visual-text">{{ section.settings.visual_text }}</p>
        {% if section.settings.visual_cta_label and section.settings.visual_cta_link %}
          <a href="{{ section.settings.visual_cta_link }}" class="printx-cta">
            {{- section.settings.visual_cta_label -}}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>
