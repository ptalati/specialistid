<style>
    .product-expert-support-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
   }

  @media (max-width: 749px) {
      .product-expert-support-{{ section.id }} {
          padding-top: {{ section.settings.padding_top_mobile }}px;
          padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      }
  }

    {% comment %} question-about {% endcomment %}
  .expert-question-about h3 {
      color: #333;
      font-size: 50px;
      margin: 0 0 16px 0;
  }
  .expert-question-about {
      background: linear-gradient(135deg, #f0f8f0, #e8f4e8);
      border: 3px solid #7ac043;
      border-radius: 12px;
      padding: 30px;
      text-align: center;
  }
  .expert-question-about p {
      color: #666;
      font-size: 16px;
      margin: 0 auto 15px;
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      text-align: center;
      justify-content: center;
      max-width: 1000px;
  }
  .expert-question-about p a {
      color: #7ac043;
      font-weight: 600;
      text-decoration: none;
      border-bottom: 2px solid transparent;
      transition: border-color 0.3s ease;
  }

    @media (max-width: 600px) {
    .expert-question-about {   padding: 20px;}
    .expert-question-about h3 {    font-size: 20px;}
    .expert-question-about p {   gap: 5px;}
  }
</style>

<div class="product-expert-support-{{ section.id }} tab-content-new">
  <div class="page-width">
    <h2 class="expert-support-header">{{ section.settings.heading }}</h2>
    <div class="expert-support-inner">
      {% if product.metafields.custom.expert_support_questions_about != blank %}
        <div class="expert-question-about">
          {{ product.metafields.custom.expert_support_questions_about | metafield_tag }}
        </div>
      {% else %}
        <div class="expert-question-about">
          <div class="metafield-rich_text_field">
            <h3>Talk to Our Magicard Specialists</h3>
            <p>
              Questions about setup, configuration, or which supplies you need? Our team has extensive Pronto100
              experience and has helped with installations across many different environments.
            </p>
            <p>
              <strong>Call our experts at&nbsp;</strong><a href="tel:+1-800-380-6726"><strong>1-800-380-6726</strong></a
              ><strong>&nbsp;or&nbsp;</strong
              ><a href="https://www.specialistid.com/pages/contact-us"><strong>schedule a consultation</strong></a>
            </p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Specialists",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding mobile",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Specialists",
      "category": "product"
    }
  ]
}
{% endschema %}