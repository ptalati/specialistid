      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "block_location",
          "label": "Block Location",
          "default": "right",
          "options": [
            {
              "value": "left",
              "label": "Left Column"
            },
            {
              "value": "right",
              "label": "Right Column"
            }
          ]
        }
      ]
    },
    {
