<style>
    .product-solution-overview-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
   }
  h2.solution-header-why {
      color: #333;
      font-size: 30px;
      margin: 0px 0 40px 0;
      padding-bottom: 20px;
      border-bottom: 2px solid #7ac043;
  }
  .solution-overview-text h3 {
      color: #333;
      font-size: 20px;
      margin: 0px;
  }
  .solution-overview-text ul {
      list-style-type: disc;
      padding-left: 20px;
      line-height: 1.8;
  }
  .solution-overview-text ul li {
      margin-bottom: 12px;
      color: rgba(var(--color-foreground),.75);
      font-size: 16px;
  }
  .solution-overview-text p {
      font-size: 16px;
      margin-bottom: 30px;
      font-weight: 500;
      margin-top: 5px;
  }
  .solution-overview-text ul li strong {
      color: #333;
  }
  .solution-overview-text {
      padding-left: 40px;
  }

  @media (max-width: 749px) {
      .product-solution-overview-{{ section.id }} {
          padding-top: {{ section.settings.padding_top_mobile }}px;
          padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      }
  }

  @media (max-width: 600px) {
    .solution-overview-text {   columns: 1;}
    .solution-overview-text h3 {    font-size: 18px;}
    .solution-overview-text p {   font-size: 15px;}
    .solution-overview-text ul li {   font-size: 15px;   margin-bottom: 10px; line-height: 1.5;}
    h2.solution-header-why {    font-size: 22px;   margin: 0px 0 20px 0; padding-bottom: 15px;}
    .solution-overview-text {     padding-left: 20px; }
  }
</style>

<div class="product-solution-overview-{{ section.id }} tab-content-new">
  <div class="page-width">
    <h2 class="solution-header-why">{{ section.settings.heading }}</h2>
    <div class="solution-overview">
      {% if product.metafields.custom.why_this_works != blank %}
        <div class="solution-overview-text">
          {{ product.metafields.custom.why_this_works | metafield_tag }}
        </div>
      {% else %}
        <div class="solution-overview-text">
          <div class="metafield-rich_text_field">
            <h3>Unmatched Customer Service</h3>
            <p>Friendly, efficient support to help you find the perfect solution.</p>
            <h3>In-Stock &amp; Ready to Ship</h3>
            <p>Huge inventory in our South Florida warehouse for lightning-fast shipping.</p>
            <h3>Over 20 Years of Expertise</h3>
            <p>Industry leaders since 2001, bringing deep experience to every order.</p>
            <h3>No Minimum Orders</h3>
            <p>We treat every order with the same importance, big or small.</p>
            <h3>Hassle-Free Customization</h3>
            <p>Easy-to-use online design tools and expert in-house design team.</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Why This Works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Hection heading"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding mobile",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Why This Works",
      "category": "product"
    }
  ]
}
{% endschema %}