{% style %}
  /* Guide Book Showcase */
  .guidebook-section {
    padding: 40px 0;
  }
  .guidebook-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }
  .guidebook-title {
    font-size: 4rem;
    font-weight: 700;
    color: #5a9633;
    margin-bottom: 2.5rem;
    position: relative;
  }
  .guidebook-title::after {
    content: '';
    width: 100px;
    height: 4px;
    background: linear-gradient(45deg, #f5911f, #ff9b2b);
    display: block;
    margin: 10px auto 0;
    border-radius: 2px;
  }
  .guidebook-card {
    background: #fff;
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    text-align: left;
  }
  .guidebook-card h3 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #5a9633;
  }
  .guidebook-card p {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: #333;
  }
  .guidebook-features {
    list-style: none;
    padding: 0;
    margin-bottom: 1.5rem;
  }
  .guidebook-features li {
    padding-left: 1.75rem;
    margin: 0.5rem 0;
    position: relative;
    color: #555;
  }
  .guidebook-features li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #6fb43f;
    font-weight: bold;
  }
  .guidebook-cta {
    display: inline-block;
    background: linear-gradient(45deg, #5a9633, #6fb43f);
    color: white;
    padding: 12px 30px;
    border-radius: 25px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .guidebook-cta:hover {
    transform: translateY(-3px);
    background: linear-gradient(45deg, #6fb43f, #7ac44a);
  }
{% endstyle %}

{% schema %}
{
  "name": "Guidebook Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Free Guidebook: Master School ID Solutions"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Guidebook Heading",
      "default": "Everything You Need to Know About School ID Implementation"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Guidebook Description",
      "default": "This comprehensive guidebook walks you through the best practices for implementing ID badge programs in educational institutions. Learn about material selection, security features, student/staff onboarding, and cost-saving tips."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA Button Label",
      "default": "Download the Guidebook"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Feature Text",
          "default": "Step-by-step badge program setup"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Guidebook Showcase Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="guidebook-section" style="background: #f9fcf6;">
  <div class="guidebook-container">
    <h2 class="guidebook-title">{{ section.settings.title }}</h2>
    <div class="guidebook-card">
      <h3>{{ section.settings.heading }}</h3>
      <p>{{ section.settings.description }}</p>
      <ul class="guidebook-features">
        {% for item in section.blocks %}
          <li>{{ item.settings.feature }}</li>
        {% endfor %}
      </ul>
      {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="guidebook-cta">{{ section.settings.cta_label }}</a>
      {% endif %}
    </div>
  </div>
</section>
