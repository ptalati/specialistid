<div class="product-custom-info page-width">
  {%- for block in section.blocks -%}
    <div class="custom-info-block" {{ block.shopify_attributes }}>
      {%- if block.settings.heading != blank -%}
        <h3>{{ block.settings.heading }}</h3>
      {%- endif -%}
      {%- if block.settings.content != blank -%}
        <div class="rte">{{ block.settings.content }}</div>
      {%- endif -%}
    </div>
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "Product Custom Info",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "custom_info",
      "name": "Custom Information",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Custom Info"
    }
  ]
}
{% endschema %}
