<style>
  .product-what-need-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
 }
  .what-need-section-head h3 {
    color: rgb(var(--color-foreground));
    font-size: 24px;
    margin: 0 0 24px;
}
.what-need-section-head span {
    margin-bottom: 32px;
    font-size: 16px;
    color: #666;
    line-height: 1.6;
}
.what-need-section-head {
    margin-bottom: 32px;
}
h4.pathway-title-new-wn {
    color: #333;
    font-size: 24px;
    margin: 0 0 20px 0;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 12px;
}
h4.pathway-title-new-wn p {
    margin: 0;
}
h4.pathway-title-new-wn span {
    background: #7ac043;
    color: #fff;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 16px;
}
.inner-what-need {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}
.inner-what-need-inner {
    transition: all 0.3s ease;
    position: relative;
    cursor: grab;
    background: #f0f8f0;
    border: 1px solid #7ac043;
    border-radius: 8px;
    padding: 20px;
}
.choose-block-tag {
    position: absolute;
    top: -8px;
    right: 16px;
    background: #7ac043;
    color: #fff;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
}
.inner-what-need-inner h5 {
    margin: 0 0 8px 0;
    color: #333;
    font-size: 18px;
    font-weight: 600;
}
.inner-what-need-inner p {
    margin: 0;
    color: #666;
    font-size: 14px;
    line-height: 1.5;
    padding: 4px 0;
}
.use-case-block-up {
    margin-top: 12px;
    padding: 8px 12px;
    background: rgb(122 192 67 / 35%);
    border-radius: 4px;
    font-size: 13px;
    font-weight: 500;
    color: #5a8f32;
}
.use-case-block-up p {
    color: #5a8f32;
    font-size: 13px;
}
.inner-what-need-inner:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
}
.authority-tip-new h3 {
    margin: 0 0 10px 0;
    color: #000;
    font-weight: 600;
    font-size: 18px;
    text-align: start;
    border-bottom: 0;
}
.authority-tip-new p {
    margin: 0;
    line-height: 1.6;
    color: #000;
}
.inner-upgrade-opt-inner.background-chnage-inner {
    background: #f0f8f0;
    border: 2px solid #7ac043;
    border-left-width: 4px;
}

@media (max-width: 749px) {
    .product-what-need-{{ section.id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
}

@media (max-width: 600px) {
  .what-need-section-head h3 {      font-size: 20px;      margin: 0px 0 16px;  }
  .what-need-section-head span {   margin-bottom: 25px;  font-size: 15px;}
  h4.pathway-title-new-wn {  font-size: 18px;}
  .inner-what-need-inner {    padding: 20px;}
  .inner-what-need {
    grid-template-columns: 1fr;
}
}


</style>

