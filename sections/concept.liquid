{% style %}
      .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

     @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.mob_top_spacing | append: 'px' }};
        padding-bottom: {{ section.settings.mob_bottom_spacing | append: 'px' }};
      }
  }
{% endstyle %}

<div class="process-container section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <h2 class="process-title">{{ section.settings.title }}</h2>
    <p class="process-subtitle">{{ section.settings.subtitle }}</p>

    <div class="process-steps">
      {% for i in (1..5) %}
        {% assign step_title_key = 'step' | append: i | append: '_title' %}
        {% assign step_desc_key = 'step' | append: i | append: '_desc' %}

        <div class="process-step">
          <div class="step-circle">{{ i }}</div>
          <h3 class="step-title">{{ section.settings[step_title_key] }}</h3>
          <p class="step-desc">{{ section.settings[step_desc_key] }}</p>
        </div>
      {% endfor %}

      <!-- Move this inside .process-steps -->
      <p class="timeline-note">{{ section.settings.timeline_note }}</p>
    </div>
  </div>
</div>

