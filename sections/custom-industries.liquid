{% schema %}
{
  "name": "Industries We Serve",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Industries We Serve"
    }
  ],
  "blocks": [
    {
      "type": "industry",
      "name": "Industry Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Industry Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Retail & Restaurant"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Multi-location consistency and brand standards"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Industries Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="industries-section">
  <div class="container">
    <h2 class="industries-heading">{{ section.settings.heading }}</h2>
    <div class="industries-grid">
      {% for block in section.blocks %}
        <div class="industry-card">
          {% if block.settings.icon %}
            <img
              src="{{ block.settings.icon | img_url: '200x200' }}"
              alt="{{ block.settings.title }}"
              class="industry-icon"
            >
          {% endif %}
          <h3 class="industry-title">{{ block.settings.title }}</h3>
          <p class="industry-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
