{% style %}
  /* Steps and Image Section */
  .taxx-section {
    padding: 40px 0;
    background: linear-gradient(135deg, #5a9633 0%, #6fb43f 100%);
    color: white;
    font-size: 1.3rem;
  }

  .taxx-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .taxx-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .taxx-title {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    color: #f5911f;
    font-weight: 700;
  }

  .taxx-description {
    margin-bottom: 2.5rem;
    font-size: 1.75rem;
    font-weight: 500;
    line-height: 1.6;
  }

  .taxx-steps {
    list-style: none;
    counter-reset: taxx-counter;
    padding: 0;
  }

  .taxx-steps li {
    counter-increment: taxx-counter;
    position: relative;
    padding-left: 3.5rem;
    padding-bottom: 1.2rem;
    font-weight: 700;
    line-height: 1.8;
    font-size: 1.75rem;
  }

  .taxx-steps li::before {
    content: counter(taxx-counter);
    position: absolute;
    left: 0;
    top: 0.2rem;
    width: 2.8rem;
    height: 2.8rem;
    background: #f5911f;
    color: white;
    font-weight: bold;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
  }

  .taxx-visual {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2.5rem;
    text-align: center;
    backdrop-filter: blur(10px);
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
  }

  .taxx-visual:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.02);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .taxx-img-wrap {
    margin-bottom: 1.5rem;
  }

  .taxx-icon {
    width: 70px;
    height: 70px;
    object-fit: contain;
    display: inline-block;
  }

  .taxx-visual-heading {
    font-size: 2.5rem;
    margin-bottom: 0.8rem;
    font-weight: 700;
  }

  .taxx-visual-text {
    font-size: 1.75rem;
    color: #fefefe;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .taxx-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .taxx-steps li {
      text-align: left;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Tax Exempt Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Tax-Exempt Ordering Made Simple"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Section Description",
      "default": "<p>We understand that educational institutions qualify for tax-exempt purchases. Our streamlined process makes it easy to place orders without tax complications.</p>"
    },
    {
      "type": "text",
      "id": "step1",
      "label": "Step 1",
      "default": "Submit your tax-exempt certificate during checkout"
    },
    {
      "type": "text",
      "id": "step2",
      "label": "Step 2",
      "default": "Our team verifies your institution's status"
    },
    {
      "type": "text",
      "id": "step3",
      "label": "Step 3",
      "default": "Receive confirmation and proceed with tax-free pricing"
    },
    {
      "type": "text",
      "id": "step4",
      "label": "Step 4",
      "default": "All future orders automatically apply tax exemption"
    },
    {
      "type": "image_picker",
      "id": "visual_image",
      "label": "Visual Box Image"
    },
    {
      "type": "text",
      "id": "visual_heading",
      "label": "Visual Box Title",
      "default": "Quick Verification Process"
    },
    {
      "type": "richtext",
      "id": "visual_text",
      "label": "Visual Box Description",
      "default": "<p>Most tax-exempt certifications are processed within 24 hours. Keep your documents ready for faster approval.</p>"
    },
    {
      "type": "url",
      "id": "visual_link",
      "label": "Visual Box Link"
    }
  ],
  "presets": [
    {
      "name": "Tax Exempt Section"
    }
  ]
}
{% endschema %}

<section class="taxx-section">
  <div class="taxx-container">
    <div class="taxx-grid">
      <div class="taxx-info">
        <h2 class="taxx-title">{{ section.settings.title }}</h2>
        <div class="taxx-description">{{ section.settings.description }}</div>
        <ol class="taxx-steps">
          <li>{{ section.settings.step1 }}</li>
          <li>{{ section.settings.step2 }}</li>
          <li>{{ section.settings.step3 }}</li>
          <li>{{ section.settings.step4 }}</li>
        </ol>
      </div>
      <a href="{{ section.settings.visual_link }}" class="taxx-visual">
        <div class="taxx-img-wrap">
          {% if section.settings.visual_image != blank %}
            <img src="{{ section.settings.visual_image | img_url: '80x80' }}" alt="Icon" class="taxx-icon">
          {% endif %}
        </div>
        <h3 class="taxx-visual-heading">{{ section.settings.visual_heading }}</h3>
        <div class="taxx-visual-text">{{ section.settings.visual_text }}</div>
      </a>
    </div>
  </div>
</section>
