{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}

@media screen and (max-width: 767px) {
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mob_top_spacing | append: 'px' }};
    padding-bottom: {{ section.settings.mob_bottom_spacing | append: 'px' }};
    }
}
{% endstyle %}



<section class="industries-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="container">
    <h2 class="industries-heading">{{ section.settings.heading }}</h2>
    <div class="industries-grid">
      {% for block in section.blocks %}
        <div class="industry-card">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | img_url: '200x200' }}" alt="{{ block.settings.title }}" class="industry-icon" />
          {% endif %}
          <h3 class="industry-title">{{ block.settings.title }}</h3>
          <p class="industry-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Industries We Serve",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Industries We Serve"
    }
  ],
  "blocks": [
    {
      "type": "industry",
      "name": "Industry Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Industry Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Retail & Restaurant"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Multi-location consistency and brand standards"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Industries Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
